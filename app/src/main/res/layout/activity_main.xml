<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:background="#F5F5F5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="8dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">


                <EditText
                    android:id="@+id/messageInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Escribe el mensaje de respuesta"
                    android:minLines="3"
                    android:inputType="textMultiLine"
                    android:background="@android:drawable/edit_text"
                    android:padding="12dp"
                    android:textColor="#000000"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/btnSaveMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¾ Guardar mensaje"
                    android:textColor="#141313"
                    android:backgroundTint="#2196F3"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:layout_marginTop="16dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/toggleService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desactivar servicio"
                    android:textSize="16sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_marginTop="24dp"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true" />
                <TextView
                    android:id="@+id/btnHideApp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cerrrar"
                    android:textColor="#ffffff"
                    android:background="#2196F3"
                    android:padding="10dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    />


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
